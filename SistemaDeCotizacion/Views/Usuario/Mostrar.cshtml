@model List<SistemaDeCotizacion.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "_Layout";
}

@if (TempData["error"] != null)
{
    <div class="alerta-temporal alert alert-danger text-center">
        @TempData["error"]
    </div>
}
@if (TempData["mensaje"] != null)
{
    <div class="alerta-temporal alert alert-success text-center">
        @TempData["mensaje"]
    </div>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Usuarios</h3>
                <ul class="nav-item">
                    <a class="nav-link d-flex flex-column align-items-center"
                       asp-controller="Usuario" asp-action="Nuevo">
                        <i class="bi bi-plus-square" style="font-size: 3rem;"></i>
                        <span>Nuevo</span>
                    </a>
                </ul>
            </div>

            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por nombre, apellido, rol o DNI..." />
                    <button type="submit" class="btn btn-dark"><i class="bi bi-search"></i> Buscar</button>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3">
                        <select asp-items="ViewBag.Meses" name="mes" class="form-select">
                            <option value="">-- Seleccionar mes --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="number" name="anio" value="@(ViewBag.AnioSeleccionado ?? DateTime.Now.Year)" class="form-control" placeholder="Año" />
                    </div>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay usuarios registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Número de celular</th>
                                <th>DNI</th>
                                <th>Estado</th>
                                <th>Correo</th>
                                <th>Rol</th>
                                <th>Fecha de registro</th>
                                <th>Fecha de nacimiento</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.nombre</td>
                                    <td>@item.apellido</td>
                                    <td>@item.num_cel</td>
                                    <td>@item.dni</td>
                                    <td>@item.estado</td>
                                    <td>@item.correo</td>
                                    <td>@item.rol?.rol_nombre</td>
                                    <td>@item.fecha_registro.ToString("dd-MM-yyyy")</td>
                                    <td>@item.fecha_nacimiento.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">
                                        <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-outline-dark me-2">🖊️</a>
                                        <a asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-danger me-2 text-white">🗑️</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @* @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["mensaje"]
                </div>
            } *@
        </div>
    </div>
    <br />
    <nav aria-label="Paginación">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Mostrar"
                       asp-route-pagina="@i"
                       asp-route-busqueda="@ViewBag.Busqueda"
                       asp-route-mes="@ViewBag.MesSeleccionado"
                       asp-route-anio="@ViewBag.AnioSeleccionado">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
</style>

<script>
    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal.alert-danger').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 5000);

    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal.alert-success').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 3000);
</script>