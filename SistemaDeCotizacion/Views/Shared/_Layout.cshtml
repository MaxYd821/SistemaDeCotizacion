﻿@using System.Security.Claims
@functions {
    string CurrentController =>
        ViewContext.RouteData.Values["controller"]?.ToString();

    string CurrentAction =>
        ViewContext.RouteData.Values["action"]?.ToString();

    string Active(string controller, string action = "Mostrar")
    {
        return (controller == CurrentController && action == CurrentAction)
            ? "active text-primary fw-bold"
            : "";
    }
}

@{
    var rolUsuario = User.FindFirstValue(ClaimTypes.Role);
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TodoCamiones</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --main-bg: #fff;
            --main-text: #000;
        }

        [data-bs-theme="dark"] {
            --main-bg: #121212;
            --main-text: #3049d9;
            background-color: var(--main-bg) !important;
            color: var(--main-text) !important;
        }

        body {
            background-color: var(--main-bg);
            color: var(--main-text);
        }

        .navbar-dark-mode {
            background-color: #212529 !important;
        }

        .form-check-input:checked {
            background-color: #000;
            border-color: #000;
        }

        .navbar .nav-link,
        .navbar .navbar-brand {
            color: var(--main-text) !important;
        }

        [data-bs-theme="dark"] .navbar .nav-link,
        [data-bs-theme="dark"] .navbar .navbar-brand {
            color: #ffffff !important;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm px-4 py-2" id="mainNavbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-dark" asp-controller="Cliente" asp-action="Mostrar">TodoCamiones</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (rolUsuario == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Usuario", "Mostrar")"
                                   asp-controller="Usuario" asp-action="Mostrar">
                                    <i class="bi bi-people" style="font-size: 1.5rem;"></i>
                                    <span>Usuarios</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Rol", "Mostrar")"
                                   asp-controller="Rol" asp-action="Mostrar">
                                    <i class="bi bi-person-fill-gear" style="font-size: 1.5rem;"></i>
                                    <span>Roles</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Cliente", "Mostrar")"
                                   asp-controller="Cliente" asp-action="Mostrar">
                                    <i class="bi bi-person-vcard" style="font-size: 1.5rem;"></i>
                                    <span>Clientes</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Vehiculo", "Mostrar")"
                                   asp-controller="Vehiculo" asp-action="Mostrar">
                                    <i class="bi bi-car-front" style="font-size: 1.5rem;"></i>
                                    <span>Vehículos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Servicio", "Mostrar")"
                                   asp-controller="Servicio" asp-action="Mostrar">
                                    <i class="bi bi-tools" style="font-size: 1.5rem;"></i>
                                    <span>Servicios</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Repuesto", "Mostrar")"
                                   asp-controller="Repuesto" asp-action="Mostrar">
                                    <i class="bi bi-box-seam-fill" style="font-size: 1.5rem;"></i>
                                    <span>Repuestos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Cotizacion", "Mostrar")"
                                   asp-controller="Cotizacion" asp-action="Mostrar">
                                    <i class="bi bi-file-earmark-bar-graph-fill" style="font-size: 1.5rem;"></i>
                                    <span>Cotizaciones</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Ingreso", "Mostrar")"
                                   asp-controller="Ingreso" asp-action="Mostrar">
                                    <i class="bi bi-currency-dollar" style="font-size: 1.5rem;"></i>
                                    <span>Ingresos</span>
                                </a>
                            </li>
                        }
                        @if (rolUsuario == "Encargado de Logística")
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Cliente", "Mostrar")"
                                   asp-controller="Cliente" asp-action="Mostrar">
                                    <i class="bi bi-person-vcard" style="font-size: 1.5rem;"></i>
                                    <span>Clientes</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Vehiculo", "Mostrar")"
                                   asp-controller="Vehiculo" asp-action="Mostrar">
                                    <i class="bi bi-car-front" style="font-size: 1.5rem;"></i>
                                    <span>Vehículos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Servicio", "Mostrar")"
                                   asp-controller="Servicio" asp-action="Mostrar">
                                    <i class="bi bi-tools" style="font-size: 1.5rem;"></i>
                                    <span>Servicios</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Repuesto", "Mostrar")"
                                   asp-controller="Repuesto" asp-action="Mostrar">
                                    <i class="bi bi-box-seam-fill" style="font-size: 1.5rem;"></i>
                                    <span>Repuestos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Cotizacion", "Mostrar")"
                                   asp-controller="Cotizacion" asp-action="Mostrar">
                                    <i class="bi bi-file-earmark-bar-graph-fill" style="font-size: 1.5rem;"></i>
                                    <span>Cotizaciones</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex flex-column align-items-center @Active("Ingreso", "Mostrar")"
                                   asp-controller="Ingreso" asp-action="Mostrar">
                                    <i class="bi bi-currency-dollar" style="font-size: 1.5rem;"></i>
                                    <span>Ingresos</span>
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item align-items-end">
                                <a class="nav-link d-flex flex-column align-items-center"
                                   asp-controller="Home" asp-action="Salir">
                                    <i class="bi bi-box-arrow-right" style="font-size: 1.5rem;"></i>
                                    <span>Salir</span>
                                </a>
                            </li>
                        }
					</ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center border-top py-3">
        <div class="container text-muted">
            &copy; 2025 - TodoCamiones</a>
        </div>
    </footer>

    <script>
        const htmlEl = document.documentElement;
        const switchInput = document.getElementById("darkModeSwitch");

        // Inicializar tema
        const currentTheme = localStorage.getItem("theme") || "light";
        htmlEl.setAttribute("data-bs-theme", currentTheme);
        switchInput.checked = currentTheme === "dark";

        // Toggle del switch
        switchInput.addEventListener("change", () => {
            const newTheme = switchInput.checked ? "dark" : "light";
            htmlEl.setAttribute("data-bs-theme", newTheme);
            localStorage.setItem("theme", newTheme);
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.userway.org/widget.js" data-account="i2uDDU2NmZ"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>