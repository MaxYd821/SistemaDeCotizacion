@model SistemaDeCotizacion.Models.Vehiculo

@{
    ViewData["Title"] = "Nuevo Vehículo";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Registrar Vehículo</h4>
                </div>
                <div class="card-body bg-light">

                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <form asp-action="Nuevo" method="post">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="modelo" class="form-label fw-semibold">Modelo</label>
                                <input asp-for="modelo" class="form-control" placeholder="Modelo del vehículo" required />
                                <span asp-validation-for="modelo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="clienteInput" class="form-label fw-semibold">Cliente</label>
                                <input type="text" id="clienteInput" class="form-control" placeholder="Buscar cliente por nombre o RUC" autocomplete="off" required />
                                <input type="hidden" id="cliente_id" name="cliente_id" />
                                <div id="clienteResultados" class="list-group mt-1"></div>
                                <span asp-validation-for="cliente_id" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="marca" class="form-label fw-semibold">Marca</label>
                                <input asp-for="marca" class="form-control" placeholder="Marca del vehiculo" required />
                                <span asp-validation-for="marca" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="placa" class="form-label fw-semibold">Placa</label>
                                <input asp-for="placa" class="form-control" placeholder="Placa del vehículo" minlength="7" maxlength="7" title="La placa debe tener 7 dígitos/>
                                <span asp-validation-for="placa" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="kilometraje" class="form-label fw-semibold">Kilometraje</label>
                                <input asp-for="kilometraje" class="form-control" min="0" max="1000000" placeholder="Kilometraje del vehículo" required
                                       oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                <span asp-validation-for="kilometraje" class="text-danger"></span>
                            </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Mostrar" class="btn btn-outline-dark">Cancelar</a>
                            <button type="submit" class="btn btn-dark px-4">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#clienteInput").on("input", function () {
                var term = $(this).val();
                if (term.length < 2) {
                    $("#clienteResultados").empty();
                    return;
                }

                $.getJSON("/Vehiculo/BuscarClientes", { term: term }, function (data) {
                    var resultados = "";
                    data.forEach(function (c) {
                        resultados += `<a href="#" class="list-group-item list-group-item-action cliente-item" data-id="${c.cliente_id}">${c.nombre_cliente}</a>`;
                    });
                    $("#clienteResultados").html(resultados);
                });
            });

            // Cuando el usuario selecciona un cliente
            $(document).on("click", ".cliente-item", function (e) {
                e.preventDefault();
                var id = $(this).data("id");
                var nombre = $(this).text();

                $("#cliente_id").val(id);
                $("#clienteInput").val(nombre);
                $("#clienteResultados").empty();
            });
        });
    </script>
}